<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modificar">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar Producto"
                android:textColor="@color/orange"
                android:textSize="30dp"
                android:gravity="center"
                />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/orange"
                app:helperText="Producto"
                app:endIconMode="clear_text"
                app:helperTextEnabled="true"
                android:hint="Ingresa el nombre del producto"
                app:boxBackgroundMode="outline"
                tools:ignore="MissingConstraints"
                android:layout_margin="@dimen/cardview_default_radius"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ProductoM"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/orange"
                app:helperText="Cantidad"
                app:counterEnabled="true"
                app:endIconMode="clear_text"
                app:helperTextEnabled="true"
                android:hint="Ingresa la cantidad"
                app:boxBackgroundMode="outline"
                tools:ignore="MissingConstraints"
                android:layout_margin="@dimen/cardview_default_radius"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/CantidadM"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/orange"
                app:helperText="Precio"
                app:counterEnabled="true"
                app:endIconMode="clear_text"
                app:helperTextEnabled="true"
                android:hint="Ingresa el precio"
                app:boxBackgroundMode="outline"
                tools:ignore="MissingConstraints"
                android:layout_margin="@dimen/cardview_default_radius"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/PrecioM"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnModifica2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Modificar"
                android:gravity="center"
                android:textColor="@color/white"/>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>